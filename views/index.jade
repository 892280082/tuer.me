extends common/layout
block content
  div(class="container")
    div(class='div-fluid show-grid')
      div(class='row')
          div(class='span8')
            if(!session.is_login)
              div(class='well row')
                h2 欢迎访问兔耳Beta版!
                h3 网站目前为止已经有#{usersCount}个注册用户,#{todoCount}条Todo,#{diariesCount}篇公开日记和#{privacyCount}篇私密日记啦!
            div(class='row')
              include package/lastfeed
          div(class='span4') 
            div(class='well',id='J_UserBar')
                if(session.is_login)
                  div(class='btn-group hot')
                    a(class="btn btn-large btn-primary",href='/diary/write',title='写日记') 写日记
                    a(class="btn btn-large",href='/notebook',title='管理日记本') 管理日记本
                    a(class="btn btn-large",href='/todo',title='创建Todo') TODO
                else
                    include package/smallLogin
            include package/hot
    include common/footer
  if(session.is_login)
    script
      seajs.use('mods/index.js?t=20121023');
