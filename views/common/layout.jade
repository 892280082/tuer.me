!!! 5
html
  head
    title
      兔耳日记 | #{session.title} 
    meta(content='text/html;charset=utf-8',http-equiv='Content-Type')
    meta(name="description",content="兔耳日记，记录精彩每一天")
    meta(name="author",content="小爝")
    link(rel='shortcut icon',href='http://#{config.csshost}/favicon.ico',type='image/x-icon')
    if(session.template == 'Invite')
      meta(http-equiv="pragma",content="no-cache")
      meta(http-equiv="cache-control",content="no-cache,must-revalidate,private,no-store")
      meta(http-equiv="expires",content="Sun, 6 Mar 2005 01:00:00 GMT")
      meta(http-equiv="expires",content="0")
    link(rel='stylesheet', href='http://#{config.csshost}/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='http://#{config.csshost}/bootstrap/css/todc-bootstrap.css')
    link(rel='stylesheet', href='http://#{config.csshost}/style/css/common.css?v=201303211840')
    if(session.template == 'profile' || session.template == 'myprofile')
      link(rel="alternate",type="application/rss+xml",href="http://#{config.host}/user/rss/#{rss.address}",title="#{rss.title}")
    each js,i in config.scripts
      script(src='http://#{config.jshost}/#{js}')
    script
      seajs.config({'base':'http://#{config.jshost}/libs/'});
    script
      seajs.use('mods/common.js?v=20121022');
  body(data-spy="scroll",data-target=".bs-docs-sidebar")
    include topbar
    block content
    
